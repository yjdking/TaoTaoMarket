<generatorConfiguration>
    <classPathEntry  location="C:\Users\admin\Desktop\java\工程\yjd_淘淘商城_所需要的资料\jar\mysql-connector-java-5.1.32.jar"/>
    <context id="testTables" targetRuntime="MyBatis3Simple" defaultModelType="flat">
